@page "/personalpage"
@using System.Net.Http
@using System.Threading.Tasks
@using TaskManagerApp.Shared.Models
@inject HttpClient http

<NavMenu />


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Complete</th>
            <th scope="col">Deadline</th>
            <th scope="col">Active</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in personlist.PeraonItems)
        
        {<tr>
            <th scope="row">@item.Id</th>
            <td>@item.Title</td>
            <td>@item.IsCompleted</td>
            <td>@item.Deadline</td>
                <td>@item.IsActive</td>
        </tr>
        }
    </tbody>
</table>




@code {
    public PersonalList personlist = new PersonalList();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            string response = "api/Task/GetAllPersonal/Personal";
            personlist = await http.GetFromJsonAsync<PersonalList>(response);
            Console.WriteLine(personlist);
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error: " + ex.Message);
        }
    }
}
